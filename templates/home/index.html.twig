{% extends 'base.html.twig' %}
{% block body %}

<section class="hero-bg d-flex align-items-center text-center text-white">
  <div class="container position-relative">
    <h1 class="display-5 fw-bold mb-3">Une mode pudique, moderne.</h1>
    <p class="lead mb-4">Des pièces sobres, pensées pour durer.</p>
    <a href="#" class="btn btn-light btn-lg rounded-0 px-4">Découvrir</a>
  </div>
</section>

<div class="container my-5">
  <div class="row g-4">
    {% for produit in produit %}
      <div class="col-12 col-md-6 col-lg-3">
          <div class="card product-card h-100 border-0 shadow-sm rounded-4">

            <div class="product-img-wrap">
              <img
                src="{{ produit.photo ? asset('images/' ~ produit.photo) : asset('images/default.png') }}"
                class="product-img"
                alt="{{ produit.nom }}"
                loading="lazy"
              />
            </div>

            <div class="card-body p-3">
              <h6 class="mb-2 product-title">{{ produit.nom }}</h6>

              <p class="text-muted small mb-3">
                {{ produit.descrptionlong|length > 70 ? produit.descrptionlong[:70] ~ '...' : produit.descrptionlong }}
              </p>

              <div class="d-flex justify-content-between align-items-center">
                <div class="product-price">{{ produit.prix }} €</div>
                <span class="product-cta">Découvrir →</span>
              </div>
            </div>

          </div>
    
      </div>
    {% endfor %}
  </div>
</div>

<style>


.hero-bg{
  min-height: 90vh;
  background-image: url("/images/hero.png");
  background-size: cover;
  background-position: center;
  background-repeat: no-repeat;
  position: relative;
}

.hero-bg::before{
  content:"";
  position:absolute;
  inset:0;
  background: rgba(0,0,0,.55);
}

.hero-bg .container{
  position: relative;
  z-index: 1;
}
.product-card{
  overflow:hidden;
  transition: transform .18s ease, box-shadow .18s ease;
}

.product-card:hover{
  transform: translateY(-4px);
  box-shadow: 0 16px 34px rgba(0,0,0,.12) !important;
}

.product-img-wrap{
  position:relative;
  aspect-ratio: 4/3;
  background:#f4f4f4;
  overflow:hidden;
}

.product-img{
  width:100%;
  height:100%;
  object-fit:cover;
  transition: transform .25s ease;
}

.product-card:hover .product-img{
  transform: scale(1.05);
}

.product-badge{
  position:absolute;
  top:12px;
  left:12px;
  background: rgba(0,0,0,.75);
  color:#fff;
  font-size:.75rem;
  padding:.35rem .55rem;
  border-radius:999px;
}

.product-title{
  font-weight:700;
  line-height:1.25;
  max-height: 2.5em;
  overflow:hidden;
}

.product-price{
  font-weight:800;
  font-size:1.1rem;
}

.product-cta{
  font-weight:700;
  font-size:.95rem;
  opacity:.85;
  transition: opacity .18s ease, transform .18s ease;
}

.product-card:hover .product-cta{
  opacity:1;
  transform: translateX(2px);
}

</style>


{% endblock %}
