{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{# ✅ on garde la navbar, mais on la rend visible sur page claire #}
{% block body_class %}page-default{% endblock %}

{% block body %}
<style>
  .auth-wrap{
    min-height: 100vh;
    display:flex;
    align-items:center;
    background: #f6f6f6;
    padding-top: 90px; /* évite que le contenu passe sous la navbar */
  }
  .auth-card{
    border-radius: 20px;
    overflow: hidden;
  }
  .auth-title{
    font-weight: 800;
    letter-spacing: -0.02em;
  }
  .auth-subtitle{
    color: rgba(0,0,0,.6);
  }
  .auth-card .form-control{
    border-radius: 14px;
    padding: .75rem .9rem;
  }
  .auth-card .form-control:focus{
    box-shadow: 0 0 0 .2rem rgba(0,0,0,.08);
    border-color: rgba(0,0,0,.4);
  }
  .btn-auth{
    border-radius: 14px;
    padding: .9rem 1rem;
    font-weight: 800;
  }
</style>

<div class="auth-wrap">
  <div class="container">
    <div class="row justify-content-center">
      <div class="col-12 col-md-8 col-lg-5">

        <div class="card auth-card border-0 shadow-sm">
          <div class="card-body p-4 p-md-5">

            <div class="text-center mb-4">
              <div class="text-muted small">Sunnah X Hall</div>
              <h1 class="auth-title h3 mb-1">Connexion</h1>
              <p class="auth-subtitle mb-0">Accède à ton espace en toute sécurité.</p>
            </div>

            {% if error %}
              <div class="alert alert-danger">
                {{ error.messageKey|trans(error.messageData, 'security') }}
              </div>
            {% endif %}

            {% if app.user %}
              <div class="alert alert-success d-flex justify-content-between align-items-center">
                <div class="small mb-0">
                  Connecté en tant que <strong>{{ app.user.userIdentifier }}</strong>
                </div>
                <a class="btn btn-sm btn-outline-dark" href="{{ logout_path() }}">Déconnexion</a>
              </div>
            {% endif %}

            <form method="post" class="mt-3">
              <div class="mb-3">
                <label for="inputEmail" class="form-label fw-semibold">Email</label>
                <input
                  type="email"
                  value="{{ last_username }}"
                  name="email"
                  id="inputEmail"
                  class="form-control"
                  autocomplete="email"
                  placeholder="ex: contact@email.com"
                  required
                  autofocus
                >
              </div>

              <div class="mb-3">
                <label for="inputPassword" class="form-label fw-semibold">Mot de passe</label>
                <input
                  type="password"
                  name="password"
                  id="inputPassword"
                  class="form-control"
                  autocomplete="current-password"
                  placeholder="••••••••"
                  required
                >
              </div>

              <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

              <div class="d-flex justify-content-between align-items-center mb-3">
                <div class="form-check">
                  <input class="form-check-input" type="checkbox" name="_remember_me" id="rememberMe">
                  <label class="form-check-label" for="rememberMe">Se souvenir de moi</label>
                </div>
              </div>

              <button class="btn btn-dark w-100 btn-auth" type="submit">
                Se connecter
              </button>

              <div class="text-center mt-3 small text-muted">
                Pas encore de compte ?
                <a class="text-decoration-none fw-semibold" href="{{ path('app_register') }}">
                  Créer un compte
                </a>
              </div>
            </form>

          </div>
        </div>

      </div>
    </div>
  </div>
</div>
{% endblock %}
